<%- include('layouts/header') %>
<main>
<div class="container my-5">
    <h1 class="mb-4 text-center" style="color: #4CAF50; font-weight: bold;"><%= title %></h1>

    <form action="/trips/edit/<%= trip._id %>" method="POST" style="background: #ffffff; border-radius: 10px; padding: 30px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);">
        <!-- Image -->
        <div class="mb-4">
            <label for="image" class="form-label" style="font-weight: bold; color: #333;">Image URL</label>
            <input type="url" class="form-control" id="image" name="image" value="<%= trip.image %>" required 
                style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
        </div>

        <!-- Place/City -->
        <div class="mb-4">
            <label for="placeCity" class="form-label" style="font-weight: bold; color: #333;">City</label>
            <input type="text" class="form-control" id="placeCity" name="placeCity" value="<%= trip.placeCity %>" required 
                style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
        </div>
        
        <!-- Customer Name -->
        <div class="mb-4">
            <label for="customerName" class="form-label" style="font-weight: bold; color: #333;">Customer Name</label>
            <input type="text" class="form-control" id="customerName" name="customerName" value="<%= trip.customerName %>" required 
                style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
        </div>

        <!-- Date -->
        <div class="mb-4">
            <label for="date" class="form-label" style="font-weight: bold; color: #333;">Date</label>
            <input type="date" class="form-control" id="date" name="date" value="<%= trip.date %>" required 
                style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
        </div>

        <!-- Time -->
        <div class="mb-4">
            <label for="time" class="form-label" style="font-weight: bold; color: #333;">Time</label>
            <input type="time" class="form-control" id="time" name="time" value="<%= trip.time %>" required 
                style="border: 1px solid #ddd; border-radius: 5px; padding: 10px;">
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success btn-lg" style="width: 48%;">Update Trip</button>
            <a href="/trips" class="btn btn-secondary btn-lg" style="width: 48%;">Cancel</a>
        </div>
    </form>
</div>
</main>